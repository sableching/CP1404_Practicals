BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            on_text: app.handle_convert()
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.3
            Button:
                text: 'Up'
                color: (0, 0, 0, 1)
                on_press: app.handle_increment(1)
                background_color: (2, 0, 1, 1)
            Button:
                text: 'Down'
                color: (0, 0, 0, 1)
                on_press: app.handle_increment(-1)
                background_color: (2, 0, 1, 1)
    #Button:
    #    text: 'Convert Miles to Kilometres'
    #    on_press: app.handle_convert()
    Label:
        id: output_label
        color: (1, 1, 0, 1)
